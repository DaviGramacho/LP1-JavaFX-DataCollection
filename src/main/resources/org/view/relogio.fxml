<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="640.0" prefWidth="600.0" style="-fx-background-color: #FFF8DC;" xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.RelogioController">
    <children>
        <!-- Botão ENVIAR -->
        <Button fx:id="btnEnviarInfoRelogio" layoutX="160.0" layoutY="299.0" mnemonicParsing="false" onAction="#enviarInfoRelogio" style="-fx-background-color: #8d6e63;" text="ENVIAR" textFill="#fcfcfc">
            <font>
                <Font name="Comic Sans MS Bold" size="13.0" />
            </font>
        </Button>

        <!-- Campo de Texto Hora -->
        <TextField fx:id="horaRelogioTextField" layoutX="131.0" layoutY="138.0" prefHeight="26.0" prefWidth="200.0" promptText="Digite a hora" />

        <!-- Campo de Texto Minutos -->
        <TextField fx:id="minutosRelogioTextField" layoutX="147.0" layoutY="186.0" prefHeight="26.0" prefWidth="200.0" promptText="Digite os minutos" />

        <!-- Campo de Texto Marca -->
        <TextField fx:id="marcaRelogioTextField" layoutX="130.0" layoutY="238.0" prefHeight="26.0" prefWidth="200.0" promptText="Digite a marca" />

        <!-- Tabela para exibição de marcas de relógio -->
        <TableView fx:id="tblView" layoutX="18.0" layoutY="412.0" prefHeight="200.0" prefWidth="266.0">
            <columns>
                <TableColumn fx:id="marcaColuna" prefWidth="90.0" style="-fx-background-color: #8d6e63; -fx-text-fill: #fcfcfc;" text="Marca" />
                <TableColumn fx:id="horaColuna" prefWidth="90.0" style="-fx-background-color: #BCAAA4; -fx-text-fill: #fcfcfc;" text="Hora" />
                <TableColumn fx:id="minutosColuna" prefWidth="90.0" style="-fx-background-color: #8d6e63; -fx-text-fill: #fcfcfc;" text="Minutos" />
            </columns>
        </TableView>
      <Label layoutX="241.0" layoutY="14.0" text="Relógio" textFill="#8d6e63">
         <font>
            <Font name="Comic Sans MS Bold" size="37" />
         </font>
      </Label>
      <Label layoutX="80.0" layoutY="140.0" text="Hora:" textFill="#8d6e63">
         <font>
            <Font name="Comic Sans MS Bold" size="15" />
         </font>
      </Label>
      <Label layoutX="75.0" layoutY="240.0" text="Marca:" textFill="#8d6e63">
         <font>
            <Font name="Comic Sans MS Bold" size="15" />
         </font>
      </Label>
      <Label layoutX="77.0" layoutY="188.0" text="Minutos:" textFill="#8d6e63">
         <font>
            <Font name="Comic Sans MS Bold" size="15" />
         </font>
      </Label>
      <Button fx:id="btnAtualizarRelogio" layoutX="20.0" layoutY="377.0" mnemonicParsing="false" onAction="#atualizarRelogio" style="-fx-background-color: #8d6e63;" text="Atualizar" textFill="#fcfcfc">
         <font>
            <Font name="Comic Sans MS Bold" size="13.0" />
         </font>
      </Button>
      <Button layoutX="20.0" layoutY="14.0" mnemonicParsing="false" onAction="#voltarPrincipalRelogio" style="-fx-background-color: #8d6e63;" text="Voltar" textFill="#fcfcfc">
         <font>
            <Font name="Comic Sans MS Bold" size="13.0" />
         </font>
      </Button>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="473.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../../atividade_2/atividade_2/src/main/java/org/example/Exercicios_Linguagem_Programacao/Segunda_Aula_11_03_2025/images/Relogios.jpg" />
         </image>
      </ImageView>
      <Button fx:id="btnDeletarRelogio" layoutX="109.0" layoutY="377.0" mnemonicParsing="false" onAction="#deletarRelogio" style="-fx-background-color: #8d6e63;" text="Deletar" textFill="#fcfcfc">
         <font>
            <Font name="Comic Sans MS Bold" size="13.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
